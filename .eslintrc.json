{
    "parser": "babel-eslint",
    "extends": [
        "airbnb"
    ],
    "plugins": [
        "flowtype"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js", ".jsx"
                ]
            }
        ],
        "max-len": [ 2, 120 ],
        "indent": [ 2, 4 ],
        "react/jsx-indent": [ 2, 4 ],
        "react/jsx-indent-props": [ 4 ],
        "no-nested-ternary": [ 0 ]
    }
}
